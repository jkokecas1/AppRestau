<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppResta.View.Mesa"
             Title="Mesas"
             NavigationPage.HasNavigationBar="False">

    <Grid RowSpacing="0" ColumnSpacing="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="110"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="1" BackgroundColor="Blue" Padding="5,10,5,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>


                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Image Source="klassylogo.png" VerticalOptions="Start" Grid.Row="0" Grid.Column="0"></Image>
                <Button Text="Mesas"  Command="{Binding Mesascommand}" Grid.Row="0" Grid.Column="1" CornerRadius="10"></Button>
                <Button Text="Ordenes" Command="{Binding Ordencommand}" Grid.Row="0" Grid.Column="2" CornerRadius="10" ></Button>
                <Button Text="Historial" Command="{Binding Historialcommand}" Grid.Row="0" Grid.Column="3" CornerRadius="10"></Button>
                <Button Text="SALIR"  Command="{Binding NavLoginCommand}" Grid.Row="0" Grid.Column="4" Grid.ColumnSpan="3" HorizontalOptions="End" CornerRadius="10"></Button>
            </Grid>
        </Grid>

        <StackLayout BackgroundColor="#D8E5DB" Grid.Row="1" Grid.Column="0" >
            <Label Text="SELECCIONA LA MESA" 
                   FontSize="Title" 
                   TextColor="Black" 
                   FontAttributes="Bold" 
                   HorizontalTextAlignment="Center" 
                   Padding="20,50,20,0"/>
        </StackLayout>



        <Grid BackgroundColor="#D8E5DB" Grid.Row="2" Grid.Column="0" Grid.RowSpan="2" Padding="60,0,60,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>



                <StackLayout  Grid.Row="0" Grid.Column="0" HorizontalOptions="Center">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <ImageButton Grid.Row="0" Grid.Column="0" Source="mesa.png" BackgroundColor="Transparent" Command="{Binding IrComandacommand}"/>
                        <Label Grid.Row="1" Grid.Column="0" Text="MESA 1" TextColor="Black" HorizontalOptions="Center" FontSize="Body"></Label>
                    </Grid>
                </StackLayout>

                <StackLayout Grid.Row="0" Grid.Column="1" HorizontalOptions="Center">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <ImageButton Grid.Row="0" Grid.Column="0" Source="mesa.png" BackgroundColor="Transparent"  Command="{Binding IrComandacommand}"/>
                        <Label Grid.Row="1" Grid.Column="0" Text="MESA 2" TextColor="Black" HorizontalOptions="Center" FontSize="Body"></Label>
                    </Grid>
                </StackLayout>


                <StackLayout  Grid.Row="0" Grid.Column="2" HorizontalOptions="Center">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <ImageButton Grid.Row="0" Grid.Column="0" Source="mesa.png" BackgroundColor="Transparent"  Command="{Binding IrComandacommand}"/>
                        <Label Grid.Row="1" Grid.Column="0" Text="MESA 3" TextColor="Black" HorizontalOptions="Center" FontSize="Body"></Label>
                    </Grid>
                </StackLayout>
                <StackLayout Grid.Row="1" Grid.Column="0" HorizontalOptions="Center">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

