<?xml version="1.0" encoding="utf-8" ?>
<popup:PopupPage
xmlns="http://xamarin.com/schemas/2014/forms"
xmlns:popup="clr-namespace:Rg.Plugins.Popup.Pages;assembly=Rg.Plugins.Popup"
xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
x:Class="AppResta.View.VerOrden">




    <Frame BackgroundColor="WhiteSmoke" Padding="20,20,20,20" Margin="150,10,150,10" CornerRadius="20">
        <Grid RowSpacing="0">


            <Grid.RowDefinitions>
                <RowDefinition Height="70"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="60"/>

            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>

            </Grid.ColumnDefinitions>


            <Grid Grid.Row="0" Grid.Column="0" BackgroundColor="WhiteSmoke" Padding="8,8,8,8">
                <Label Grid.Row="0" Grid.Column="0" x:Name="numeroOrden" TextColor="Black" FontAttributes="Bold" FontSize="25"/>
                <StackLayout Grid.Row="0" Grid.Column="1">
                    <Label  x:Name="HoraInicioOrden" TextColor="Black" FontAttributes="Bold" FontSize="25"/>
                </StackLayout>
                <Label Grid.Row="0" Grid.Column="2" x:Name="CronometroOrden" TextColor="Black" FontAttributes="None" FontSize="25"/>
                <Label Grid.Row="0" Grid.Column="3" x:Name="HoraEstimadaOrden" TextColor="Black" FontAttributes="Bold" FontSize="25"/>
                <ImageButton Grid.Row="0" Grid.Column="4" Clicked="cerrarPop" HorizontalOptions="End"  Source="cerrar.png"/>

            </Grid>



           <Frame Grid.Row="1" Grid.Column="0" Padding="30,30,30,30" CornerRadius="15">



            <Grid>



                <RefreshView Grid.Row="0" Grid.Column="0">
                        <CollectionView SelectionMode="Single" x:Name="ordenlist" >
                        <CollectionView.ItemsLayout>
                            <GridItemsLayout Orientation="Vertical" Span="2"/>
                        </CollectionView.ItemsLayout>
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Grid Padding="5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="200"/>
                                    </Grid.RowDefinitions>
                                    <Frame HasShadow="True" Padding="5" CornerRadius="10">
                                        <Grid BackgroundColor="White" RowSpacing="0" Padding="9,9,9,9">
                                            <Grid.RowDefinitions >
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="20"/>
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                                <Grid Grid.Row="0"  Grid.Column="0"  BackgroundColor="White" HorizontalOptions="Center" Padding="0,0,0,0">
                                                    <Label Text="Cantidad:" TextColor="Black" FontFamily="Bold" FontSize="20"/>
                                                </Grid>
                                                <Grid Grid.Row="0"  Grid.Column="1"  BackgroundColor="White" HorizontalOptions="Center" Padding="0,0,0,0">
                                                     <Label Text="Platillo" TextColor="Black" FontFamily="Bold" FontSize="20"/>
                                                </Grid>
                                               
                                                <Grid Grid.Row="1"  Grid.Column="0" BackgroundColor="White" HorizontalOptions="Center" Padding="0,0,0,0">
                                                    <Label Text="{Binding cantidad}" TextColor="Black" FontFamily="Bold" FontSize="20"/>
                                                </Grid>
                                                <Grid Grid.Row="1"  Grid.Column="1" BackgroundColor="White" HorizontalOptions="Center" Padding="0,0,0,0">
                                                    <Label Text="{Binding platillo}" TextColor="Black" FontFamily="Bold" FontSize="20"/>
                                                </Grid>
                                                <Grid Grid.Row="2"  Grid.Column="0" BackgroundColor="White" HorizontalOptions="Center" Padding="0,0,0,0">
                                                    <Label Text="Descripcion" TextColor="Black" FontFamily="Bold" FontSize="20"/>
                                                </Grid>
                                                <Grid Grid.Row="3"  Grid.Column="0" BackgroundColor="White" HorizontalOptions="Center" Padding="0,0,0,0">
                                                    <Label Text="By default, Xamarin.Forms uses a system font defined by each platform. However, controls that display text define properties that you can use to change this font:" TextColor="Black" FontFamily="Bold" FontSize="20"/>
                                                    
                                                </Grid>
                                    

                                        </Grid>

                                    </Frame>
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>

                    </CollectionView>
                </RefreshView>
            </Grid>

    </Frame>
    <Grid Grid.Row="2" Grid.Column="0" BackgroundColor="WhiteSmoke" Padding="8,8,8,8">
                
                <Picker x:Name="horas" Grid.Row="0" Grid.Column="0" Title="SELECIONA EL TIEMPO ESTIMADO" SelectedIndexChanged="OnPickerSelectedIndexChanged" HorizontalTextAlignment="Center">
                        <Picker.Items>
                            
                        </Picker.Items>
                    </Picker>  
               
                <Button x:Name="btnIniciar" Grid.Column="1"  Text="Iniciar"  BackgroundColor="Green" TextColor="White" Clicked="Button_Clicked" />

                <Button Grid.Row="0" Grid.Column="2"  Text="Finalizar" BackgroundColor="Red" TextColor="White"/>
            </Grid>


        </Grid>
    </Frame>
</popup:PopupPage>