<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppResta.View.SplashCarga"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand" Orientation="Vertical" Spacing="50">
            <Label x:Name="progressLabel" Text="Welcome to Xamarin.Forms!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />

            <ProgressBar ProgressColor="Green" HeightRequest="20" 
                         WidthRequest="400" x:Name="progressbar"/>
   </StackLayout>
    </ContentPage.Content>
</ContentPage>