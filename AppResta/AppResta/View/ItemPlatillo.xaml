<?xml version="1.0" encoding="utf-8" ?>
<popup:PopupPage
 x:Name="popup"
 CloseWhenBackgroundIsClicked="False"
xmlns="http://xamarin.com/schemas/2014/forms"
xmlns:popup="clr-namespace:Rg.Plugins.Popup.Pages;assembly=Rg.Plugins.Popup"
xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
xmlns:input="clr-namespace:Plugin.InputKit.Shared.Controls;assembly=Plugin.InputKit"
  x:Class="AppResta.View.ItemPlatillo">

    <Frame BackgroundColor="WhiteSmoke" Padding="20,20,20,20" Margin="200,10,200,10" CornerRadius="20">
        <Grid RowSpacing="0">


            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="60"/>

            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>

            </Grid.ColumnDefinitions>


            <Grid Grid.Row="0" Grid.Column="0" BackgroundColor="WhiteSmoke" Padding="8,8,8,8">
                <Label Grid.Row="0" Grid.Column="0" x:Name="nombPlatillo"  TextColor="Black" FontAttributes="Bold" FontSize="25"/>
                <Button Grid.Row="0" Grid.Column="1" Clicked="cerrarPop" HorizontalOptions="End"  Text="X"/>

            </Grid>




            <Grid Grid.Row="1" Grid.Column="0" Padding="8,8,8,8">
                <ScrollView>
                    
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="300"/>
                            <RowDefinition Height="100"/>


                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>

                        </Grid.ColumnDefinitions>

                        <Grid Grid.Row="0" Grid.Column="0" >
                            <Label x:Name="descPlatillo" TextColor="Black" BackgroundColor="WhiteSmoke" Padding="8,8,8,8" FontSize="20"/>
                        </Grid>
                        <CollectionView Grid.Row="0" Grid.Column="1" x:Name="extrasListView" SelectionMode="Multiple" SelectionChanged="selectmultiple" >
                            <CollectionView.ItemsLayout>
                                <GridItemsLayout Orientation="Vertical" Span="3"/>
                            </CollectionView.ItemsLayout>
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Padding="5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="100"/>
                                        </Grid.RowDefinitions>
                                        <Frame HasShadow="True" Padding="5" CornerRadius="10">
                                            <Grid BackgroundColor="WhiteSmoke" RowSpacing="0" Padding="9,9,9,9">
                                                <Grid.RowDefinitions >
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="20"/>
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>


                                                <StackLayout  Grid.Column="0" Grid.Row="0" HorizontalOptions="Center" VerticalOptions="Center" Orientation="Vertical">
                                                    <Label x:Name="nombre" Text="{Binding extra_nombre}" TextColor="Black" FontSize="15"/>
                                                </StackLayout>
                                                <StackLayout  Grid.Column="1" Grid.Row="0" HorizontalOptions="Center" VerticalOptions="Center" Orientation="Vertical">
                                                    <Label x:Name="cantidad" Text="{Binding extra_precio}" TextColor="Black" FontSize="15"/>
                                                </StackLayout>

                                            </Grid>

                                        </Frame>

                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                        <!--
                        <ListView Grid.Row="0" Grid.Column="1" BackgroundColor="WhiteSmoke" x:Name="extrasListView"  SelectedItem="select_extra">
                            <ListView.ItemTemplate >
                                <DataTemplate  >
                                    <ViewCell >
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>

                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>

                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                           <StackLayout  Grid.Column="0" Grid.Row="0"  HorizontalOptions="Center" VerticalOptions="Center" Orientation="Vertical">
                                                <input:CheckBox/> 
                                                <CheckBox CheckedChanged="OnCheckBoxCheckedChanged" />
                                            </StackLayout>
                                            <StackLayout  Grid.Column="1" Grid.Row="0" HorizontalOptions="Center" VerticalOptions="Center" Orientation="Vertical">
                                                <Label x:Name="nombre" Text="{Binding extra_nombre}" TextColor="Black" FontSize="15"/>
                                            </StackLayout>
                                            <StackLayout  Grid.Column="2" Grid.Row="0" HorizontalOptions="Center" VerticalOptions="Center" Orientation="Vertical">
                                                <Label x:Name="cantidad" Text="{Binding extra_precio}" TextColor="Black" FontSize="15"/>
                                            </StackLayout>

                                        </Grid>

                                    </ViewCell>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                         -->

                        <Entry BackgroundColor="LightGray" x:Name="comentTxt" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Placeholder="Comentarios" TextColor="Black"/>

                    </Grid>
   
                   
                </ScrollView>
            </Grid>

            <Grid Grid.Row="2" Grid.Column="0" BackgroundColor="WhiteSmoke" Padding="8,8,8,8">
                <Label  Grid.Row="0" Grid.Column="1" x:Name="valCantidad" Text="0" FontSize="Large"></Label>
                <Stepper Grid.Row="0" Grid.Column="0" ValueChanged="cantidadPlatillo"></Stepper>
                <Button Grid.Row="0" Grid.Column="2" Clicked="agregarItemCart" Text="agregar" TextColor="Black" BackgroundColor="Green" />
            </Grid>


        </Grid>
    </Frame>
</popup:PopupPage>