                    </Grid>
                </StackLayout>

                <StackLayout Grid.Row="2" Grid.Column="0" HorizontalOptions="Center">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <ImageButton Grid.Row="0" Grid.Column="0" Source="mesa.png" BackgroundColor="Transparent"  Command="{Binding IrComandacommand}"/>
                        <Label Grid.Row="1" Grid.Column="0" Text="MESA 7" TextColor="Black" HorizontalOptions="Center" FontSize="Body"></Label>
                    </Grid>
                </StackLayout>
                <StackLayout Grid.Row="2" Grid.Column="1" HorizontalOptions="Center">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <ImageButton Grid.Row="0" Grid.Column="0" Source="mesa.png" BackgroundColor="Transparent"  Command="{Binding IrComandacommand}"/>
